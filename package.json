{
  "name": "skymp5-server",
  "version": "0.0.0",
  "versionSkyrimPlatform": "1.3.0",
  "description": "",
  "scripts": {
    "install": "cd skymp5-gamemode && npm i && cd ../skymp5-client && npm i && cd ../skymp5-front && npm i --only=dev && npm i --only=prod",
    "configure": "cmake-js configure",
    "print-configure": "cmake-js print-configure",
    "build": "npm run build-ts && npm run build-cpp",
    "build-prod": "npm run build-ts && npm run build-cpp-prod",
    "build-ts": "tsc --p tsconfig.back.json && cd skymp5-client && npm run build -- --outFile ../dist_front/skymp5-client.js && cd ../skymp5-gamemode && npm run build && cd ../skymp5-front && npm run build",
    "build-cpp": "cd build && cmake --build .",
    "build-cpp-prod": "cd build && cmake --build . --config Release",
    "test": "jest --forceExit --coverage --verbose && cd build && ctest -C Debug -V",
    "test-prod": "jest --forceExit --coverage --verbose && cd build && ctest -C Release -V",
    "watch-node": "nodemon ./dist_back/index.js --watch ./dist_back",
    "watch-gamemode": "cd skymp5-gamemode && npm run serve",
    "watch-front": "cd skymp5-front && npm run watch",
    "watch-node-prod": "cross-env NODE_ENV=production nodemon ./dist_back/index.js --watch ./dist_back",
    "watch-ts-back": "tsc --p tsconfig.back.json -w ",
    "watch-ts-front": "cd skymp5-client && npm run watch -- --outFile ../dist_front/skymp5-client.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"backend tsc,frontend tsc,node,gamemode parcel,front\" -c \"cyan.bold,cyan.bold,green.bold,cyan.bold,cyan.bold\" \"npm run watch-ts-back\" \"npm run watch-ts-front\" \"npm run watch-node\" \"npm run watch-gamemode\" \"npm run watch-front\"",
    "watch-prod": "concurrently -k -p \"[{name}]\" -n \"backend tsc,frontend tsc,node,gamemode parcel,front\" -c \"cyan.bold,cyan.bold,green.bold,cyan.bold,cyan.bold\" \"npm run watch-ts-back\" \"npm run watch-ts-front\" \"npm run watch-node-prod\" \"npm run watch-gamemode\" \"npm run watch-front\"",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "start": "node ./dist_back/index.js",
    "nexe": "nexe -r ./dist_back --target windows-x64-12.9.1 ./dist_back",
    "pack": "npm run nexe && node pack.js",
    "pack-client": "node pack-client.js",
    "push-s3": "node push-s3.js",
    "release": "npm run pack && npm run pack-client && npm run push-s3",
    "start-prod": "cross-env NODE_ENV=production node ./dist_back/index.js",
    "clinic": "clinic flame -- node ./dist_back/index.js"
  },
  "author": "Leonid Pospelov <pospelovlm@yandex.ru>",
  "dependencies": {
    "7zip-bin": "^5.0.3",
    "@types/argparse": "^1.0.38",
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.2.12",
    "@types/chokidar": "^2.1.3",
    "@types/eslint": "^7.2.0",
    "@types/jest": "^26.0.0",
    "@types/koa": "^2.11.3",
    "@types/koa-static": "^4.0.1",
    "@types/node": "^14.0.13",
    "@types/node-gettext": "^3.0.1",
    "@types/source-map-support": "^0.5.1",
    "@types/sprintf-js": "^1.1.2",
    "@types/ws": "^7.2.6",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "archiver": "^5.2.0",
    "argparse": "^1.0.10",
    "aws-sdk": "^2.838.0",
    "axios": "^0.21.1",
    "chokidar": "^3.5.1",
    "clinic": "^6.0.3",
    "cmake-js": "^6.1.0",
    "concurrently": "^5.2.0",
    "crc-32": "^1.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.3.1",
    "gettext-parser": "^4.0.4",
    "jest": "^26.1.0",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-bodyparser": "^4.3.0",
    "koa-proxy": "^1.0.0-alpha.3",
    "koa-router": "^10.0.0",
    "koa-static": "^5.0.0",
    "nexe": "^3.3.7",
    "node-7z": "^2.1.2",
    "node-addon-api": "^3.0.0",
    "node-gettext": "^3.0.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "progress": "^2.0.3",
    "source-map-support": "^0.5.19",
    "sprintf-js": "^1.1.2",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5",
    "vm2": "^3.9.2",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@types/node-7z": "^2.1.0",
    "@types/progress": "^2.0.3"
  }
}
