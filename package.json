{
  "name": "scamp-server",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "install": "npm run configure && npm run build",
    "configure": "cmake-js configure",
    "build": "tsc --p tsconfig.back.json && cd build && cmake --build . && cd ../skymp5-client && npm run build -- --outFile ../dist_front/skymp5-client.js",
    "build-ts": "tsc --p tsconfig.back.json && cd skymp5-client && npm run build -- --outFile ../dist_front/skymp5-client.js",
    "build-cpp": "cd build && cmake --build .",
    "test": "jest --forceExit --coverage --verbose && cd build && ctest -C Debug -V",
    "watch-node": "nodemon ./dist_back/index.js --watch ./dist_back",
    "watch-node-prod": "cross-env NODE_ENV=production nodemon ./dist_back/index.js --watch ./dist_back",
    "watch-ts-back": "tsc --p tsconfig.back.json -w ",
    "watch-ts-front": "cd skymp5-client && npm run watch -- --outFile ../dist_front/skymp5-client.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"backend tsc,frontend tsc,node\" -c \"cyan.bold,cyan.bold,green.bold\" \"npm run watch-ts-back\" \"npm run watch-ts-front\" \"npm run watch-node\"",
    "watch-prod": "concurrently -k -p \"[{name}]\" -n \"backend tsc,frontend tsc,node\" -c \"cyan.bold,cyan.bold,green.bold\" \"npm run watch-ts-back\" \"npm run watch-ts-front\" \"npm run watch-node-prod\"",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "start": "node ./dist_back/index.js",
    "nexe": "nexe ./dist_back/index.js",
    "pack": "npm run nexe && node pack.js",
    "start-prod": "cross-env NODE_ENV=production node ./dist_back/index.js",
    "clinic": "clinic flame -- node ./dist_back/index.js"
  },
  "author": "Leonid Pospelov <pospelovlm@yandex.ru>",
  "dependencies": {
    "@types/argparse": "^1.0.38",
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.2.12",
    "@types/chokidar": "^2.1.3",
    "@types/eslint": "^7.2.0",
    "@types/jest": "^26.0.0",
    "@types/koa": "^2.11.3",
    "@types/koa-static": "^4.0.1",
    "@types/node": "^14.0.13",
    "@types/source-map-support": "^0.5.1",
    "@types/ws": "^7.2.6",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "argparse": "^1.0.10",
    "axios": "^0.21.1",
    "chokidar": "^3.5.1",
    "clinic": "^6.0.3",
    "cmake-js": "^6.1.0",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.3.1",
    "jest": "^26.1.0",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-static": "^5.0.0",
    "nexe": "^3.3.7",
    "node-addon-api": "^3.0.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5",
    "ws": "^7.3.1"
  }
}
