{
  "name": "scamp-server",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "install": "npm run configure && npm run build",
    "configure": "cmake-js configure",
    "build": "tsc && cd build && cmake --build .",
    "build-ts": "tsc",
    "build-cpp": "cd build && cmake --build .",
    "test": "jest --forceExit --coverage --verbose && cd build && ctest -C Debug -V",
    "watch-node": "nodemon ./dist/index.js",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "start": "node ./dist/index.js",
    "nexe": "nexe --target windows-x64-12.18.0 ./dist/index.js",
    "start-prod": "cross-env NODE_ENV=production node ./dist/index.js"
  },
  "author": "Leonid Pospelov <pospelovlm@yandex.ru>",
  "dependencies": {
    "@types/argparse": "^1.0.38",
    "@types/axios": "^0.14.0",
    "@types/eslint": "^7.2.0",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/source-map-support": "^0.5.1",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "argparse": "^1.0.10",
    "axios": "^0.19.2",
    "cmake-js": "^6.1.0",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.3.1",
    "jest": "^26.1.0",
    "nexe": "^3.3.7",
    "node-addon-api": "^3.0.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5"
  }
}
