{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "skymp",
  "homepage": "https://github.com/skyrim-multiplayer/skymp",
  "description": "Multiplayer Mod & TypeScript SDK for Skyrim Special Edition",
  "dependencies": [
    "cmakerc",
    "nlohmann-json",
    "cpp-httplib",
    "zlib",
    "spdlog",
    "catch2",
    "sparsepp",
    "simdjson",
    "robin-hood-hashing",
    "simpleini",
    "bshoshany-thread-pool",
    "makeid",
    "libzippp",
    {
      "name": "slikenet",
      "platform": "!emscripten"
    },
    {
      "name": "mongo-cxx-driver",
      "platform": "!emscripten"
    },
    {
      "name": "node-addon-api",
      "platform": "!emscripten"
    },
    {
      "name": "rsm-bsa",
      "platform": "!osx & !emscripten"
    },
    {
      "name": "frida-gum",
      "platform": "windows"
    },
    {
      "name": "chakracore",
      "platform": "windows"
    },
    {
      "name": "directxtk",
      "platform": "windows"
    },
    {
      "name": "mhook",
      "platform": "windows"
    },
    {
      "name": "cef-prebuilt",
      "platform": "windows"
    },
    {
      "name": "asio",
      "platform": "windows"
    },
    {
      "name": "libarchive",
      "platform": "windows",
      "features": []
    }
  ],
  "features": {
    "skyrim-se": {
      "description": "Build platform for Skyrim Special Edition.",
      "dependencies": [
        {
          "name": "commonlibse",
          "platform": "windows"
        }
      ]
    },
    "skyrim-ae": {
      "description": "Build platform for Skyrim Anniversary Edition.",
      "dependencies": [
        {
          "name": "commonlibae",
          "platform": "windows"
        }
      ]
    },
    "skyrim-vr": {
      "description": "Build platform for Skyrim VR."
    }
  }
}
