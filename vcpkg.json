{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "skymp",
  "homepage": "https://github.com/skyrim-multiplayer/skymp",
  "description": "Multiplayer Mod & TypeScript SDK for Skyrim Special Edition",
  "dependencies": [
    "cmakerc",
    "nlohmann-json",
    "cpp-httplib",
    "zlib",
    "spdlog",
    "catch2",
    "sparsepp",
    "slikenet",
    "mongo-cxx-driver",
    "simdjson",
    "robin-hood-hashing",
    "simpleini",
    "node-addon-api",
    "bshoshany-thread-pool",
    "makeid",
    {
      "name": "frida-gum",
      "platform": "windows"
    },
    {
      "name": "chakracore",
      "platform": "windows"
    },
    {
      "name": "directxtk",
      "platform": "windows"
    },
    {
      "name": "mhook",
      "platform": "windows"
    },
    {
      "name": "cef-prebuilt",
      "platform": "windows"
    },
    {
      "name": "asio",
      "platform": "windows"
    }
  ],
  "features": {
    "skyrim-se": {
      "description": "Build platform for Skyrim Special Edition.",
      "dependencies": [
        {
          "name": "commonlibse",
          "platform": "windows"
        }
      ]
    },
    "skyrim-ae": {
      "description": "Build platform for Skyrim Anniversary Edition.",
      "dependencies": [
        {
          "name": "commonlibae",
          "platform": "windows"
        }
      ]
    },
    "skyrim-vr": {
      "description": "Build platform for Skyrim VR."
    }
  },
  "overrides": [
    {
      "name": "chakracore",
      "version-date": "2022-11-09",
      "port-version": 3
    }
  ],
  "vcpkg-configuration": {
    "default-registry": {
      "kind": "git",
      "repository": "https://github.com/microsoft/vcpkg",
      "baseline": "4a8d11802f0a9ffbe5c68f6143d61d469d800a7d"
    }
  }
}
